<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_brush_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bauandhornick.colorme.BrushOptionActivity">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/line"
        android:id="@+id/line"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Line"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/paintbrush"
        android:layout_alignEnd="@+id/line" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/rectangle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="72dp"
        android:layout_alignEnd="@+id/paintbrush" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/rectangle"
        android:id="@+id/rectangle"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Rectangle"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/paintbrush"
        android:id="@+id/paintbrush"
        android:layout_alignTop="@+id/line"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Freestyle"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:fontFamily="casual"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        android:gravity="right|center_vertical"
        android:layout_marginStart="32dp"
        android:layout_above="@+id/paintbrush"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:text="Thickness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:id="@+id/textView7"
        android:fontFamily="casual"
        android:textSize="18sp" />

</RelativeLayout>
